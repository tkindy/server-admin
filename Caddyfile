synchro.tylerkindy.com {
  log {
    output file synchro-access
  }
  encode zstd gzip
  reverse_proxy :8080
}

betrayal.tylerkindy.com {
  log {
    output file betrayal-access
  }
  encode zstd gzip

  handle /api/* {
    uri strip_prefix /api
    reverse_proxy :8081
  }

  handle {
    root * /var/betrayal-www
    try_files {path} /index.html
    file_server
  }
}
